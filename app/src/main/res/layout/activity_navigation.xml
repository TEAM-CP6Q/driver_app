<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <!-- 카카오 내비 뷰 -->
    <com.kakaomobility.knsdk.ui.view.KNNaviView
        android:id="@+id/navi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 상단 정보 바 -->
    <LinearLayout
        android:id="@+id/layoutNavigationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_overlay_top"
        android:padding="16dp"
        android:paddingTop="32dp">

        <!-- 속도 및 제한속도 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textCurrentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0km/h"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/textSpeedLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60km/h"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/speed_limit_background"
                android:padding="4dp"
                android:layout_marginStart="16dp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonExitNavigation"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="종료"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_exit_background"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

        <!-- 다음 안내 -->
        <TextView
            android:id="@+id/textNextInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경로 계산 중..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="4dp" />

        <!-- 현재 도로 -->
        <TextView
            android:id="@+id/textCurrentRoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 도로"
            android:textSize="14sp"
            android:textColor="@color/colorWhiteAlpha"
            android:layout_marginBottom="8dp" />

        <!-- 남은 거리 및 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRemainingDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계산 중..."
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:drawableStart="@drawable/ic_location_white"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/textRemainingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계산 중..."
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:drawableStart="@drawable/ic_time_white"
                android:drawablePadding="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 수거 완료 버튼 -->
    <Button
        android:id="@+id/buttonCompletePickup"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="수거 완료"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_complete_background"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="24dp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_check_white"
        android:drawablePadding="8dp" />

    <!-- 로딩 -->
    <ProgressBar
        android:id="@+id/progressNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>